<h1>GeekTwitter</h1>
<h3>新規Tweet</h3>
<%= form_for @post do |f| %>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_field :content, :size => 140 %>
  </div>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <%= f.submit "Tweetする" %>
<% end %>
<%= link_to "Tweet一覧に戻る", posts_path %>